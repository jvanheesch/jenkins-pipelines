package com.github.jvanheesch.sitedeploy

@Library('jenkins-shared-library')
import java.lang.Object

def pom

pipeline {
    agent {
        label 'master'
    }

    options {
        disableConcurrentBuilds()
    }

    parameters {
        string(description: 'Version', name: 'TAG_VERSION')
    }

    stages {
        // https://issues.jenkins-ci.org/browse/JENKINS-37050?focusedCommentId=336512&page=com.atlassian.jira.plugin.system.issuetabpanels%3Acomment-tabpanel#comment-336512
        stage('Checkout') {
            steps {
                checkout scm: [$class: 'GitSCM', userRemoteConfigs: [[url: 'git@github.com:jvanheesch/site-parent-pom.git' ]], branches: [[name: 'refs/tags/site-parent-pom-1.1']]]
            }
        }
//        stage('Checkout') {
//            steps {
//                timestamps {
//                    script {
//                        echo 'Checkout'
//                        echo "param: ${params.TAG_VERSION}"
//                        echo "<checkoutFromGithubWithTag>"
//                        checkoutFromGithubWithTag(this, 'site-parent-pom', "site-parent-pom-${params.TAG_VERSION}")
//                        echo "</checkoutFromGithubWithTag>"
////                        checkoutFromGithub(this, 'site-parent-pom', 'master')
//                        echo "<readMavenPom>"
//                        pom = this.readMavenPom()
//                        echo "</readMavenPom>"
//                    }
//                }
//            }
//        }
        stage('Build') {
            steps {
                timestamps {
                    script {
                        echo 'Build'
                        sh 'mvn clean install -U -DskipTests=true'
                    }
                }
            }
        }
    }
    post {
        failure {
            script {
                echo "FAILURE"
            }
        }
    }
}